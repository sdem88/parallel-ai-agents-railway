{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm run build",
    "watchPatterns": [
      "src/**",
      "public/**",
      "package.json"
    ]
  },
  "deploy": {
    "startCommand": "npm run start",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "deploy": {
        "replicas": 2,
        "memoryMB": 512,
        "cpuCores": 0.5
      }
    },
    "staging": {
      "deploy": {
        "replicas": 1,
        "memoryMB": 256,
        "cpuCores": 0.25
      }
    }
  }
}